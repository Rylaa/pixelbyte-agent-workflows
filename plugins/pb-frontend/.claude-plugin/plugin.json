{
  "name": "pb-frontend",
  "version": "1.1.0",
  "description": "Senior-level frontend development guidelines for React/TypeScript with automatic skill activation and code review reminders.",
  "author": {
    "name": "Pixelbyte",
    "url": "https://github.com/Rylaa"
  },
  "repository": "https://github.com/Rylaa/pixelbyte-agent-workflows",
  "license": "MIT",
  "keywords": ["react", "typescript", "nextjs", "frontend", "tailwind", "swr", "suspense", "performance", "best-practices", "hooks"],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/skill-activation-prompt.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/skill-usage-tracker.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/code-change-tracker.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
